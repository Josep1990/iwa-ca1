<%- include("../partials/header")%>
    <div class="container">

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <div class="col-lg-12">
                <h2>Our Popular Movies</h2>
                <br>
                <%movies.forEach(function(movie){%>
                   
                        <form class="todo-form" action="/index" method="POST">
                            <div class="card" style="width: 32rem;">
                                <div class="caption">
                                    <h3 name="title">
                                        <%=movie.title%>
                                    </h3>
                                </div>
                                <div class="thumbnail">
                                    <img class="rounded" name="poster_path" src="https://image.tmdb.org/t/p/w300<%=movie.poster_path %>">
                                </div>
                                <div class="card-body">
                                    <p class="card-text" name="overview">
                                        <%=movie.overview%>
                                    </p>
                                </div>
                                <% if(currentUser){%>
                                    <button class="btn btn-success" type="submit">Save</button>
                                <% } %>
                            </div>
                        </form>
                        <br>
                        <%})%>
            </div>
        </div>

    </div>


    <%- include("../partials/footer")%>